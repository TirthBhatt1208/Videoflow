generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  clerkId      String   @unique        // Clerk userId
  email        String
  name         String?
  createdAt    DateTime @default(now())
  videos       Video[]  // user videos

  @@index([clerkId])
}

model Video {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])

  originalUrl     String
  title           String?
  description     String?
  
  status          VideoStatus @default(UPLOADED)
  progress        Int         @default(0) // real-time percentage
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  metadata        Metadata?
  processedFiles  ProcessedFile[]
  thumbnail       Thumbnail[]
}

enum VideoStatus {
  UPLOADED
  QUEUED
  METADATA_EXTRACTED
  TRANSCODED
  HLS_READY
  COMPLETED
  FAILED
}

model Metadata {
  id        String   @id @default(cuid())
  videoId   String   @unique
  video     Video    @relation(fields: [videoId], references: [id])

  duration      Float?
  width         Int?
  height        Int?
  fps           Float?
  codec         String?
  audioCodec    String?
  bitrate       Int?

  createdAt     DateTime @default(now())
}

model ProcessedFile {
  id            String   @id @default(cuid())
  videoId       String
  video         Video    @relation(fields: [videoId], references: [id])

  resolution    String   // "1080p", "720p", etc
  playlistUrl   String   // .m3u8 URL
  baseUrl       String?  // ts chunks base folder

  width         Int?
  height        Int?
  bitrate       Int?

  createdAt     DateTime @default(now())

  @@index([videoId])
}

model Thumbnail {
  id        String   @id @default(cuid())
  videoId   String   
  video     Video    @relation(fields: [videoId], references: [id])

  url       String
  time      Int
  createdAt DateTime @default(now())

  @@index([videoId])
}

model JobLog {
  id        String   @id @default(cuid())
  videoId   String   
  jobType   String   // "metadata", "transcode", "hls"
  status    String   // "success" | "failed"
  message   String?
  createdAt DateTime @default(now())
}


