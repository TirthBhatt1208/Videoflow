generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  clerkId      String   @unique
  email        String
  name         String?
  createdAt    DateTime @default(now())
  videos       Video[]
  storage      Float      @default(0)

  @@index([clerkId])
}

model Video {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])

  originalUrl           String
  masterPlaylistUrl     String? 
  vttUrl               String?
  title                 String?
  description           String?
  
  status          VideoStatus @default(UPLOADED)
  progress        Int         @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  metadata        Metadata?
  processedFiles  ProcessedFile[]
  thumbnail       Thumbnail[]
}

enum VideoStatus {
  UPLOADED
  QUEUED
  METADATA_EXTRACTED
  VTT_GENERATED
  TRANSCODED
  HLS_READY
  COMPLETED
  FAILED
}

model ProcessedFile {
  id                  String   @id @default(cuid())
  videoId             String
  video               Video    @relation(fields: [videoId], references: [id])

  variant             String   // v0", "v1", "v2", "v3", "v4"
  resolution          String   // "240p", "360p", "480p", "720p", "1080p"
  indexPlaylistUrl    String  

  width               Int?
  height              Int?
  bitrate             Int?

  segments            Segment[] 
  createdAt           DateTime @default(now())

  @@unique([videoId, variant]) 
  @@index([videoId])
}

model Segment {
  id                  String   @id @default(cuid())
  processedFileId     String   // ðŸ‘ˆ Changed from 'proccesId'
  processedFile       ProcessedFile @relation(fields: [processedFileId], references: [id])

  segmentIndex        Int      // 0, 1, 2, 3...
  url                 String   // Cloudinary URL of .ts file
  size                Int?     // File size in bytes
  duration            Float?   // Segment duration in seconds

  createdAt           DateTime @default(now())

  @@index([processedFileId])
}

model Metadata {
  id        String   @id @default(cuid())
  videoId   String   @unique
  video     Video    @relation(fields: [videoId], references: [id])

  duration      Float?
  width         Int?
  height        Int?
  fps           Float?
  codec         String?
  audioCodec    String?
  bitrate       Int?

  createdAt     DateTime @default(now())
}

model Thumbnail {
  id        String   @id @default(cuid())
  videoId   String   
  video     Video    @relation(fields: [videoId], references: [id])

  url       String
  time      Int
  createdAt DateTime @default(now())

  @@index([videoId])
}

model JobLog {
  id        String   @id @default(cuid())
  videoId   String   
  jobType   String   // "metadata", "transcode", "hls"
  status    String   // "success" | "failed"
  message   String?
  createdAt DateTime @default(now())
}